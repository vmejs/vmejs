{
  "name": "vmejs",
  "version": "0.0.1-alpha.4",
  "description": "",
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "update": "esno scripts/update.ts",
    "dev": "run-s update docs:dev",
    "dev:vue": "pnpm -C playgrounds/vue dev",
    "dev:react": "pnpm -C playgrounds/react dev",
    "build": "run-s update tsup",
    "build:update": "run-s update tsup --watch",
    "docs:dev": "pnpm -C docs dev",
    "docs:build": "pnpm run -C docs build",
    "change": "changeset",
    "change:version": "changeset version",
    "release": "run-s build release:only",
    "release:only": "changeset publish",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx,.json --max-warnings 0 --cache",
    "lint:fix": "pnpm run lint --fix",
    "format": "prettier --write --cache .",
    "test": "vitest test",
    "coverage": "vitest run --coverage"
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,json}": [
      "eslint --cache --fix",
      "pnpm format",
      "git add"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.7",
    "@changesets/cli": "^2.25.2",
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "@vitest/coverage-c8": "^0.25.1",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "esno": "^0.16.3",
    "fast-glob": "^3.2.12",
    "fs-extra": "^11.1.0",
    "gray-matter": "^4.0.3",
    "happy-dom": "^7.7.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "simple-git": "^3.15.1",
    "tsup": "^6.4.0",
    "typescript": "^4.8.4",
    "vite": "^3.2.3",
    "vitest": "^0.25.1"
  }
}
